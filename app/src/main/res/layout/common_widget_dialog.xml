<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="256dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/common_widget_dialog_title"
        style="@style/common_widget_dialog_text_title_style"
        android:layout_width="256dip"
        android:layout_height="39dip"
        android:paddingTop="1.5dip"
        android:background="@mipmap/common_widget_dialog_title_bg"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/common_widget_dialog_content"
        android:layout_width="256dip"
        android:layout_height="wrap_content"
        android:background="@mipmap/common_widget_dialog_message_bg"
        android:minHeight="65dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/common_widget_dialog_message"
            style="@style/common_widget_dialog_text_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dip"
            android:gravity="center"
            android:minHeight="53dip" />
        <EditText
            android:id="@+id/common_widget_dialog_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="#686868"
            android:visibility="gone"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:singleLine="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/common_widget_dialog_divide_line" />
        
        <LinearLayout
        android:layout_width="256dip"
        android:layout_height="52dip"
        
        android:orientation="horizontal"
        android:paddingLeft="16dip"
        android:paddingRight="16dip">

        <Button
            android:id="@+id/common_widget_dialog_positiveButton"
            style="@style/common_widget_dialog_button_text_size"
            android:layout_width="0dp"
            android:layout_height="33dip"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/common_widget_dialog_positive_button_bg"
            android:drawablePadding="-20dip"
            android:singleLine="true" />

        <Button
            android:id="@+id/common_widget_dialog_negativeButton"
            style="@style/common_widget_dialog_button_text_size"
            android:layout_width="0dp"
            android:layout_height="33dip"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:background="@drawable/common_widget_dialog_negative_button_bg"
            android:singleLine="true"/>
    </LinearLayout>
    </LinearLayout>

    

</LinearLayout>